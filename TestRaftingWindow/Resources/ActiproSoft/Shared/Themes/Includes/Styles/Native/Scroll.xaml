								BorderBrushHover="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarButtonBorderHoverBrushKey}}"
								BorderBrushPressed="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarButtonBorderPressedBrushKey}}"
								BorderThickness="{TemplateBinding BorderThickness}"
								Highlight="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarButtonHighlightNormalBrushKey}}"
								HighlightDisabled="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarButtonHighlightDisabledBrushKey}}"
								HighlightHover="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarButtonHighlightHoverBrushKey}}"
								HighlightPressed="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarButtonHighlightPressedBrushKey}}"
								GlyphBackground="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarThumbGlyphBackgroundNormalBrushKey}}"
								GlyphBackgroundHover="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarThumbGlyphBackgroundHoverBrushKey}}"
								GlyphBackgroundPressed="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarThumbGlyphBackgroundPressedBrushKey}}"
								GlyphHighlight="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarThumbGlyphHighlightNormalBrushKey}}"
								GlyphHighlightHover="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarThumbGlyphHighlightNormalBrushKey}}"
								GlyphHighlightPressed="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarThumbGlyphHighlightNormalBrushKey}}"
								InnerBorderBrush="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarButtonInnerBorderNormalBrushKey}}"
								InnerBorderBrushDisabled="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarButtonInnerBorderDisabledBrushKey}}"
								InnerBorderBrushHover="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarButtonInnerBorderHoverBrushKey}}"
								InnerBorderBrushPressed="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarButtonInnerBorderPressedBrushKey}}"
								InnerBorderThickness="1" IsAnimationEnabled="{TemplateBinding themes:ThemeProperties.IsAnimationEnabled}"
								BorderStyle="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarButtonElementChromeBorderStyleKey}}"
								CornerRadius="{TemplateBinding themes:ThemeProperties.CornerRadius}" Glyph="{TemplateBinding controlsPrimitives:ScrollChrome.Glyph}"
								UseAlternateGeometry="{DynamicResource {x:Static themes:AssetResourceKeys.ScrollBarThumbGlyphUseAlternateGeometryBooleanKey}}"
								SnapsToDevicePixels="true" />
					</Border>
					
					<ControlTemplate.Triggers>
						<Trigger Property="themes:ThemeProperties.UseAlternateStyle" Value="true">
							<Setter Property="Background" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonVerticalBackgroundNormalBrushKey}}" />
							<Setter TargetName="chrome" Property="BackgroundDisabled" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonVerticalBackgroundDisabledBrushKey}}" />
							<Setter TargetName="chrome" Property="BackgroundHover" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonVerticalBackgroundHoverBrushKey}}" />
							<Setter TargetName="chrome" Property="BackgroundPressed" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonVerticalBackgroundPressedBrushKey}}" />
							<Setter Property="BorderBrush" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonBorderNormalBrushKey}}" />
							<Setter TargetName="chrome" Property="BorderBrushDisabled" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonBorderDisabledBrushKey}}" />
							<Setter TargetName="chrome" Property="BorderBrushHover" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonBorderHoverBrushKey}}" />
							<Setter TargetName="chrome" Property="BorderBrushPressed" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonBorderPressedBrushKey}}" />
							<Setter TargetName="chrome" Property="Highlight" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonHighlightNormalBrushKey}}" />
							<Setter TargetName="chrome" Property="HighlightDisabled" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonHighlightDisabledBrushKey}}" />
							<Setter TargetName="chrome" Property="HighlightHover" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonHighlightHoverBrushKey}}" />
							<Setter TargetName="chrome" Property="HighlightPressed" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonHighlightPressedBrushKey}}" />
							<Setter TargetName="chrome" Property="GlyphBackground" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarThumbGlyphBackgroundNormalBrushKey}}" />
							<Setter TargetName="chrome" Property="GlyphBackgroundHover" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarThumbGlyphBackgroundHoverBrushKey}}" />
							<Setter TargetName="chrome" Property="GlyphBackgroundPressed" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarThumbGlyphBackgroundPressedBrushKey}}" />
							<Setter TargetName="chrome" Property="GlyphHighlight" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarThumbGlyphHighlightNormalBrushKey}}" />
							<Setter TargetName="chrome" Property="GlyphHighlightHover" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarThumbGlyphHighlightNormalBrushKey}}" />
							<Setter TargetName="chrome" Property="GlyphHighlightPressed" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarThumbGlyphHighlightNormalBrushKey}}" />
							<Setter TargetName="chrome" Property="InnerBorderBrush" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonInnerBorderNormalBrushKey}}" />
							<Setter TargetName="chrome" Property="InnerBorderBrushDisabled" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonInnerBorderDisabledBrushKey}}" />
							<Setter TargetName="chrome" Property="InnerBorderBrushHover" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonInnerBorderHoverBrushKey}}" />
							<Setter TargetName="chrome" Property="InnerBorderBrushPressed" Value="{DynamicResource {x:Static themes:AssetResourceKeys.WorkspaceScrollBarButtonInnerBorderPressedBrushKey}}" />
