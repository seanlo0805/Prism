<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
	    xmlns:sharedMedia="clr-namespace:ActiproSoftware.Windows.Media;assembly=ActiproSoftware.Shared.Wpf"
		xmlns:themes="clr-namespace:ActiproSoftware.Windows.Themes;assembly=ActiproSoftware.Shared.Wpf">
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="Classic.g.xaml" />
	</ResourceDictionary.MergedDictionaries>
	
	<LinearGradientBrush PresentationOptions:Freeze="True" x:Key="{x:Static themes:AssetResourceKeys.WindowTitleBarBackgroundActiveBrushKey}">
		<GradientStop Offset="0" Color="{x:Static SystemColors.ActiveCaptionColor}" />
		<GradientStop Offset="1" Color="{x:Static SystemColors.GradientActiveCaptionColor}" />
	</LinearGradientBrush>
	<LinearGradientBrush PresentationOptions:Freeze="True" x:Key="{x:Static themes:AssetResourceKeys.WindowTitleBarBackgroundInactiveBrushKey}">
		<GradientStop Offset="0" Color="{x:Static SystemColors.InactiveCaptionColor}" />
		<GradientStop Offset="1" Color="{x:Static SystemColors.GradientInactiveCaptionColor}" />
	</LinearGradientBrush>
	
</ResourceDictionary>
